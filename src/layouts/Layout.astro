---
import { SEO } from "astro-seo";
const SITE = "https://www.buxrail.com";
const clarityId = import.meta.env.PUBLIC_CLARITY_ID;
const gaId = import.meta.env.PUBLIC_GA_ID;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- your SEO tags -->
    <SEO
      title="Buxrail | Simplify your travel"
      description="BuxRail is an app that streamlines your journeys…"
      openGraph={{
        basic: {
          title: "Buxrail | Simplify your travel",
          url: SITE,
          image: `${SITE}/header.jpg`,
          type: "website",
        },
        article: { authors: ["Buxrail"] },
        image: { url: `${SITE}/header.jpg`, alt: "Buxrail header image" },
      }}
      twitter={{
        card: "summary_large_image",
        title: "Buxrail | Simplify your travel",
        description: "BuxRail is an app that streamlines your journeys…",
        image: `${SITE}/header.jpg`,
      }}
    />

    <link rel="icon" href="/favicon.svg" />
	<script type="module" src="/~partytown/partytown.js" defer></script>


{clarityId && (
	<script type="text/partytown">
	  {`
		(function(c,l,a,r,i,t,y){
		  c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
		  t=l.createElement(r); t.async=1;
		  t.src="https://www.clarity.ms/tag/${clarityId}";
		  y=l.getElementsByTagName(r)[0];
		  y.parentNode.insertBefore(t,y);
		})(window,document,'clarity','script','${clarityId}');
	  `}
	</script>
  )}
  <script
  data-category="analytics"
  is:inline
  type="text/partytown"
  src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}
></script>

<script data-category="analytics" is:inline type="text/partytown">
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag('config',`${gaId}`,{ send_page_view:true }, {
	page_path: window.location.pathname,
  });
</script>
  </head>
  <body>
    <slot />
  </body>
</html>
