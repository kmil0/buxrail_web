---
import { SEO } from "astro-seo";
const SITE = 'https://www.buxrail.com';
const CLARITY_ID = import.meta.env.PUBLIC_CLARITY_ID;
const gaId = import.meta.env.PUBLIC_GA_ID;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
		<meta property="og:image" content="/header.jpg">
		<SEO title="Buxrail | Simplify your travel" description="BuxRail is an app streamlines your journeys: a global payment app for mass transit, compatible with QR codes, NFC contactless payments, and cryptocurrencies." 		
		openGraph={{
			basic: {
				title: "Buxrail | Simplify your travel",
				url: SITE,
				image: `${SITE}/header.jpg`,
				type: "website",				
			},
			article : {
            authors: ['Buxrail'],
			},
			image: {
            url: '/header.jpg',
            alt: 'Buxrail header image',            
        },  
		}}		
		twitter={{
			card: "summary_large_image",
			title: "Buxrail | Simplify your travel",
			description: "BuxRail is an app streamlines your journeys: a global payment app for mass transit, compatible with QR codes, NFC contactless payments, and cryptocurrencies.",
			image: "/header.jpg",
		}} />				
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Buxrail | Simplify your travel</title>
		{CLARITY_ID && (
			<script type="text/javascript">
				(function(c,l,a,r,i,t,y){
					c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
					t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
					y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
				})(window, document, "clarity", "script", "{CLARITY_ID}");
			</script>
		)}		
		<!-- Google Analytics -->
		<script async
		src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GA_ID}`}
		></script>
		<script is:inline>
			{`
			window.dataLayer = window.dataLayer || [];
			function gtag(){ dataLayer.push(arguments); }
			gtag('js', new Date());
			gtag('config', '${import.meta.env.PUBLIC_GA_ID}', { send_page_view: true });
			`}
		</script>
	</head>
	<body>
		<div>
			<noscript>
				<iframe
					src={`https://www.googletagmanager.com/ns.html?id=${import.meta.env.PUBLIC_GA_ID}`}
					height="0" width="0" style="display:none;visibility:hidden"
				></iframe>
			</noscript>
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%
		@apply grid place-content-center p-20;
	}

	body > div {
		@apply grid place-content-center;
	}
</style>
